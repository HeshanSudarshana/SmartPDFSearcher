                <Font size="15.0" />
            </font>
        </JFXButton>
      <JFXPasswordField fx:id="passwordText" alignment="CENTER" focusColor="#22a7f0" labelFloat="true" layoutX="145.0" layoutY="161.0" prefHeight="30.0" prefWidth="310.0" promptText="Change Password" />
      <JFXPasswordField fx:id="confirmPasswordTxt" alignment="CENTER" focusColor="#22a7f0" labelFloat="true" layoutX="145.0" layoutY="211.0" prefHeight="30.0" prefWidth="310.0" promptText="Confirm Password" />

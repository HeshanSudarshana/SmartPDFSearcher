                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </children></AnchorPane>
        <JFXTextField fx:id="usernameTxt" alignment="CENTER" focusColor="#22a7f0" labelFloat="true" layoutX="145.0" layoutY="109.0" prefHeight="30.0" prefWidth="310.0" promptText="Change Username" />
